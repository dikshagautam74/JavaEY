package fourth;

class Emp{
	private int id;
	private String name;
	private int age;
	private int salary;
	private String desig;
	
	void setId(int id) {
		this.id=id;
	}
	int getId() {
		return id;
	}
	
	void setName(String name) {
		this.name=name;
	}
	String getName() {
		return name;
	}
	
	void setAge(int age) {
		this.age=age;
	}
	int getAge() {
		return age;
	}
	
	void setSalary(int salary) {
		this.salary=salary;
	}
	int getSalary() {
		return salary;
	}
	
	void setDesig(String desig) {
		this.desig=desig;
	}
	String getDesig() {
		return desig;
	}
}
public class Encapsulate {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Emp e=new Emp();
		e.setId(100);
		e.setName("John");
		e.setAge(24);
		e.setSalary(10000);
		e.setDesig("Developer");
		System.out.println(e.getId());
		System.out.println(e.getAge());
		System.out.println(e.getSalary());
		System.out.println(e.getSalary());
		System.out.println(e.getDesig());
		

	}

}
